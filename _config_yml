  - jekyll-sitemap
  - jekyll-seo-tag

# Collections pour organiser le contenu
collections:
  publications:
    output: true
    permalink: /:collection/:name/
  projects:
    output: true
    permalink: /:collection/:name/
  posts:
    output: true
    permalink: /actualites/:year/:month/:day/:title/

# Defaults pour les collections
defaults:
  - scope:
      path: ""
      type: "posts"
    values:
      layout: "post"
      author: "Claire Vandiedonck"
  - scope:
      path: ""
      type: "publications"
    values:
      layout: "publication"
  - scope:
      path: ""
      type: "projects"
    values:
      layout: "project"

